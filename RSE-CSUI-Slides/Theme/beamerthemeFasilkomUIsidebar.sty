\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemeFasilkomUIsidebar}[2024/11/07 v1.5.0 The Fasilkom UI Sidebar Beamer Theme]
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Load required packages
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{tikz}
\usetikzlibrary{external}
\RequirePackage{calc}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%theme options
\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerouterthemeFasilkomUIsidebar}}
\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections}{beamerouterthemeFasilkomUIsidebar}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections}{beamerouterthemeFasilkomUIsidebar}}
\DeclareOptionBeamer{hidetitle}{\PassOptionsToPackage{hidetitle}{beamerouterthemeFasilkomUIsidebar}}
\DeclareOptionBeamer{hideauthor}{\PassOptionsToPackage{hideauthor}{beamerouterthemeFasilkomUIsidebar}}
\DeclareOptionBeamer{hideinstitute}{\PassOptionsToPackage{hideinstitute}{beamerouterthemeFasilkomUIsidebar}}
\DeclareOptionBeamer{shownavsym}{\PassOptionsToPackage{shownavsym}{beamerouterthemeFasilkomUIsidebar}}
\DeclareOptionBeamer{lightheaderbg}{\PassOptionsToPackage{lightheaderbg}{beamercolorthemeFasilkomUIsidebar}}
\DeclareOptionBeamer{left}{%
  \PassOptionsToPackage{left}{beamerouterthemeFasilkomUIsidebar}%
  \PassOptionsToPackage{left}{beamerinnerthemeFasilkomUIsidebar}%
  }
\DeclareOptionBeamer{right}{%
  \PassOptionsToPackage{right}{beamerouterthemeFasilkomUIsidebar}%
  \PassOptionsToPackage{right}{beamerinnerthemeFasilkomUIsidebar}%
  }
\ProcessOptionsBeamer

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  \useinnertheme{FasilkomUIsidebar}
  \useoutertheme{FasilkomUIsidebar}
  \usecolortheme{FasilkomUIsidebar}
}%end of beamer specific options

\mode<all>
